@using Blinds.Common;
@using Blinds.Web.Models;

@model MenuModel

<ul class="nav navbar-nav">
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Продукти <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
            @foreach (var item in Model.BlindCategories)
            {
                <li>@Html.ActionLink(item.Name, GlobalConstants.ProductsActionName, GlobalConstants.ProductsControllerName, new { area = GlobalConstants.PublicAreaName, @id = item.Id }, null)</li>
            }
        </ul>      
    </li>
    @if (User.Identity.IsAuthenticated)
    {
        <li>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">@GlobalConstants.OrdersName<span class="caret"></span></a>
            <ul class="dropdown-menu" role="menu">

                    <li>@Html.ActionLink("Нова поръчка", GlobalConstants.OrdersActionName, GlobalConstants.OrdersControllerName, new { area = GlobalConstants.PublicAreaName }, null)</li>
                    <li>@Html.ActionLink("Моите поръчки", GlobalConstants.MyOrdersActionName, GlobalConstants.OrdersControllerName, new { area = GlobalConstants.PublicAreaName }, null)</li>

            </ul>
        </li>
    }

    @if (User.IsInRole(GlobalConstants.AdministratorRoleName))
    {
        <li>@Html.ActionLink(GlobalConstants.AdministrationControllerTitle, GlobalConstants.AdminActionName , GlobalConstants.AdminControllerName, new { area = GlobalConstants.AdminAreaName }, null)</li>
    }
</ul>

