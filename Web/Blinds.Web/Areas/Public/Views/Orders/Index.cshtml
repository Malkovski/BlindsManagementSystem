@using Blinds.Web.Areas.Public.Models

@model OrdersModel

@using (Html.BeginForm("Create", "Orders"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Поръчка</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.Number, "Number", new { @class = "control-label col-md-3" })
            <div class="col-md-7">
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BlindType, "Model", new { @class = "control-label col-md-3" })
            <div class="col-md-7">
                @Html.DropDownListFor(m => m.BlindTypeId, Model.BlindTypes, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Color, "Color", new { @class = "control-label col-md-3" })
            <div class="col-md-7">
                @Html.DropDownListFor(m => m.Color, Model.Colors, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.InstalationType, "Instalation", new { @class = "control-label col-md-3" })
            <div class="col-md-7">
                @Html.DropDownListFor(m => m.InstalationType, Model.InstalationTypes, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m, "", new { @class = "text-danger" })
            </div>
        </div>
        @Html.Partial("_BlindRowsPartial")

        <div id="newBlinds"></div>
        <button id="addBlindRow">Add row</button>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Преглед на поръчката" class="btn btn-default pull-right" />
            </div>
        </div>
    </div>
}

<script type="text/javascript">

    $("#addBlindRow").on('click', function () {
        $.ajax({
            async: true,
            url: '/Orders/NewBlindRow'
        }).success(function (partialView) {

            $('#newBlinds').append(partialView);
        });
    });

</script>

