@model Enum

<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "control-label col-md-3" })
    <div class="col-md-7">
        @Html.EnumDropDownListFor(m => m, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m, "", new { @class = "text-danger" })
    </div>
</div>