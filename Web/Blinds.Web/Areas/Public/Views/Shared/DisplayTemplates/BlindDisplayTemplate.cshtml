@using Blinds.Web.Areas.Public.Proxies

@model IEnumerable<BlindProxy>


<table class="table table-bordered table-condensed">
    @foreach (var blind in Model)
    {
        <tr class="form-group">
            <td class="col-md-2">
                @Html.DisplayFor(x => blind.ControlName)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(x => blind.Width)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(x => blind.Height)
            </td>
            <td class="col-md-3">
                @Html.DisplayFor(x => blind.Price)
            </td>
        </tr>
    }
</table>


