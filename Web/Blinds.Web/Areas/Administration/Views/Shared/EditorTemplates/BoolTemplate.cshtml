@model bool

<div class="form-group">
    @Html.LabelFor(m => m, new { @class = "control-label col-md-3" })
    <div class="col-md-7">
        @Html.CheckBoxFor(m => m, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m, null, new { @class = "text-danger" })
    </div>
</div>